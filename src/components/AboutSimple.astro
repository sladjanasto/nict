---
import { getUITranslations, getLangFromUrl } from '../utils/i18n';

const { url } = Astro;
const lang = getLangFromUrl(url);
const ui = await getUITranslations(lang);

// Extract about data safely
const aboutData = ui.about || {};
const advantages = aboutData.advantages || [];
const coreCompetencies = aboutData.coreCompetencies?.items || [];
const certifications = aboutData.certifications?.items || [];

// Extract technology expertise data
const portfolioData = ui.portfolio || {};
const technologyExpertise = portfolioData.technologyExpertise || aboutData.technologyExpertise || {};
const techCategories = technologyExpertise.categories || [];
---

<section id="about" class="about section">
	<div class="container">
		<h2 class="section-title scroll-reveal">What makes us tick</h2>
		
		<div class="about-intro scroll-reveal">
			<div class="experience-highlight">
				<h3>20+ Years Hands-On Experience. Strategic Vision. Operational Excellence.</h3>
			</div>
			<p class="intro-text">
				As an IT expert with over two decades of hands-on experience, I bring a unique combination of strategic foresight and operational depth. My career path led me from system administrator to senior global IT Manager role and finally to an independent IT service provider â€“ a journey that enabled me to penetrate and understand every level of the IT landscape.
			</p>
		</div>
		
		<div class="about-content fade-in-up">
			<!-- Core Competencies Section -->
			<div class="competencies-section">
				<h3 class="section-subtitle">{aboutData.coreCompetencies?.title || 'Core Competencies'}</h3>
				<div class="competencies-list">
					{coreCompetencies.map((competency: any) => (
						<div class="competency-row">
							<div class="competency-details">
								<h4>{competency.title}</h4>
								<div class="skills-icons">
									{competency.skills?.map((skill: string) => {
										let iconClass = '';
										let skillName = skill;
										
										// Mapiranje skill-ova na Icomoon ikonice
										switch(skill.toLowerCase()) {
											case 'aws':
												iconClass = 'icon-amazonaws';
												break;
											case 'azure':
												iconClass = 'icon-microsoftazure';
												break;
											case 'google cloud':
												iconClass = 'icon-googlecloud';
												break;
											case 'multi-cloud strategy':
												iconClass = 'icon-cloud';
												skillName = 'Multi-cloud';
												break;
											case 'docker':
												iconClass = 'icon-docker';
												break;
											case 'kubernetes':
												iconClass = 'icon-kubernetes';
												break;
											case 'terraform':
												iconClass = 'icon-terraform';
												break;
											case 'ci/cd':
												iconClass = 'icon-jenkins';
												skillName = 'CI/CD';
												break;
											case 'team leadership':
												iconClass = 'icon-groups';
												break;
											case 'project management':
												iconClass = 'icon-user-tie';
												break;
											case 'scrum master':
												iconClass = 'icon-scrum';
												break;
											case 'itil v4':
												iconClass = 'icon-itil';
												break;
											case 'ai manager':
												iconClass = 'icon-ai';
												break;
											default:
												iconClass = 'icon-cogs';
										}
										
										return (
											<div class="skill-icon-item">
												<span class={iconClass}></span>
												<span class="skill-name">{skillName}</span>
											</div>
										);
									})}
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
			
			<!-- Key Advantages Section -->
			<div class="advantages-section">
				<h3 class="section-subtitle">Key Advantages</h3>
				<div class="advantages-list">
					{advantages.map((advantage: any) => (
						<div class="advantage-row">
							<div class="advantage-details">
								<h4>{advantage.title}</h4>
								<div class="advantage-icons">
									<div class="advantage-icon-item">
										{advantage.icon === 'ðŸŽ¯' && <span class="icon-user-tie"></span>}
										{advantage.icon === 'âš¡' && <span class="icon-cogs"></span>}
										{advantage.icon === 'ðŸ”§' && <span class="icon-home"></span>}
									</div>
									<p class="advantage-description">{advantage.description}</p>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
			
		</div>
	</div>
</section>

<style>
	/* Import Icomoon font */
	@import url('/icons/style.css');

	.about {
		background: var(--bg-white);
		padding: var(--spacing-xxl) 0;
	}
	
	.about-intro {
		text-align: center;
		margin-bottom: var(--spacing-xxl);
	}
	
	.intro-text {
		font-size: var(--font-size-lg);
		color: var(--text-muted);
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.7;
	}
	
	.experience-highlight {
		margin-bottom: var(--spacing-lg);
	}
	
	.experience-highlight h3 {
		font-family: var(--font-headings);
		font-size: var(--font-size-xl);
		font-weight: 600;
		color: var(--primary-color);
		text-align: center;
		margin: 0;
		line-height: 1.4;
	}
	
	.about-content {
		max-width: 900px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-3xl);
	}
	
	/* Section Subtitles */
	.section-subtitle {
		font-family: var(--font-headings);
		font-size: var(--font-size-2xl);
		font-weight: 700;
		color: var(--primary-color);
		margin-bottom: var(--spacing-xl);
		text-align: center;
		position: relative;
	}
	
	.section-subtitle::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: var(--bg-gradient);
		border-radius: 2px;
	}
	
	/* Core Competencies Linear Layout */
	.competencies-list {
		display: flex;
		flex-direction: row;
		gap: var(--spacing-lg);
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
	}
	
	.competency-row {
		display: flex;
		align-items: flex-start;
		gap: var(--spacing-lg);
		padding: 1rem;
		border-radius: 50%;
		border: 1px solid var(--primary-color);
		transition: all var(--transition-normal);
		width:25%;
		aspect-ratio: 1 / 1;
	}
	
	.competency-row:hover {
		transform: translateX(8px);
		box-shadow: var(--shadow-lg);
		background: var(--bg-white);
	}
	.competency-row:hover span[class^="icon-"]{
		visibility: hidden;
	}
	.competency-row:hover .skill-name{
		visibility: visible;
		opacity: 1
	}
	
	
	.competency-details {
		flex: 1;
	}
	
	.competency-details h4 {
		font-family: var(--font-headings);
		font-size: var(--font-size-xl);
		font-weight: 300;
		color: var(--text-dark);
		margin-bottom: var(--spacing-md);
		text-align: center;
		white-space: nowrap;
		transform: translate(0px, -5rem);
	}
	
	.skills-icons {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		transform: translate(0px, -2rem);
		gap:1.3rem
	}
	
	.skill-icon-item {
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: var(--radius-lg);
		transition: all var(--transition-normal);
		width: 60px;
		height: 60px;
		flex-direction: column;
	}
	
	
	.skill-icon-item span[class^="icon-"] {
		font-size: 2rem;
		line-height: 1;
		color: var(--primary-color);
		visibility: visible;
		transform: translate(0, 0.5rem);
	}
	.skill-icon-item .skill-name{
		visibility: hidden;
		font-size: small;
		text-align: center;
		font-weight: 500;
		opacity: 0;
		transition: opacity 2s ease;
transform: translate(0, -1rem);
white-space: nowrap;
	}
	.competency-row:last-child .skill-name{
		white-space: break-spaces;
	}
	
	/* Key Advantages Linear Layout */
	.advantages-list {
		display: flex;
		flex-direction: row;
		gap: var(--spacing-lg);
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
	}
	
	.advantage-row {
		display: flex;
		align-items: flex-start;
		gap: var(--spacing-lg);
		padding: 10px;
		border-radius:50%;
		border: 1px solid var(--primary-color);
		transition: all var(--transition-normal);
		width: 25%;
		aspect-ratio: 1 / 1;
	}
	
	.advantage-row:hover {
		transform: translateX(8px);
		box-shadow: var(--shadow-lg);
		background: var(--bg-white);
	}
	
	.advantage-details {
		flex: 1;
		text-align: center;
		transform: translate(0px, -2rem);
	}
	
	.advantage-details h4 {
		font-family: var(--font-headings);
		font-size: var(--font-size-xl);
		font-weight: 300;
		color: var(--text-dark);
		margin-bottom: var(--spacing-md);
		    text-align: center;
    white-space: nowrap;
    transform: translate(0px, -3rem);
	}
	
	.advantage-icons {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	
	.advantage-icon-item {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 60px;
		height: 60px;
		margin-bottom: var(--spacing-sm);
	}
	
	
	.advantage-icon-item span[class^="icon-"] {
		font-size: 2rem;
		line-height: 1;
		transition: all var(--transition-normal);
		color: var(--secondary-color);
	}
	
	.:hover span[class^="icon-"] {
		color: white !important;
	}
	
	.advantage-description {
		color: var(--text-muted);
		line-height: 1.6;
		font-size: var(--font-size-md);
		margin: 0;
	}
	
	/* Projects Section Styles */
	.projects-section {
		width: 100%;
	}
	
	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: var(--spacing-xl);
	}
	
	.project-card {
		padding: var(--spacing-xl);
		border-radius: var(--radius-lg);
		background: var(--bg-card);
		box-shadow: var(--shadow-md);
		transition: transform var(--transition-normal), box-shadow var(--transition-normal);
		border: 1px solid rgba(26, 234, 226, 0.1);
	}
	
	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
		border-color: var(--primary-color);
	}
	
	.project-header {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-md);
	}
	
	.project-icon {
		font-size: 2rem;
	}
	
	.project-title {
		font-size: var(--font-size-lg);
		font-weight: 600;
		color: var(--text-dark);
		margin: 0;
	}
	
	.project-industry {
		font-size: var(--font-size-sm);
		color: var(--text-light);
	}
	
	.project-description {
		color: var(--text-light);
		margin-bottom: var(--spacing-md);
		line-height: 1.6;
	}
	
	.project-results {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.result-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		margin-bottom: var(--spacing-sm);
		font-size: var(--font-size-sm);
		color: var(--text-dark);
	}
	
	.result-icon {
		font-size: var(--font-size-xs);
	}
	
	/* Tablet Styles */
	@media (min-width: 769px) and (max-width: 1024px) {
		.about-content {
			max-width: 800px;
		}
		
		.competency-row,
		.advantage-row {
			flex-direction: column;
			text-align: center;
			gap: var(--spacing-md);
			width:33%;
		}
	}
	
	@media (max-width: 768px) {
		.experience-highlight h3 {
			font-size: var(--font-size-lg);
		}
		
		.about-content {
			gap: var(--spacing-2xl);
		}
		
		.section-subtitle {
			font-size: var(--font-size-xl);
		}
		
		.competency-row,
		.advantage-row {
			flex-direction: column;
			text-align: center;
			gap: var(--spacing-md);
			padding: var(--spacing-lg);
			width:50%;
		}
		
		.advantage-icons {
			align-self: center;
		}
		
		.competency-details h4,
		.advantage-details h4 {
			font-size: var(--font-size-lg);
		}
		
		.skills-icons {
			justify-content: center;
		}
		
		.skill-icon-item {
			width: 50px;
			height: 50px;
		}
		
		.skill-icon-item span[class^="icon-"] {
			font-size: 1.5rem;
		}
	}
</style>
</style>