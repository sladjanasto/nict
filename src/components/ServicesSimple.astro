					}
				]
			},
			cloud: {
				title: 'Cloud Migration Packages',
				packages: [
					{
						name: 'Migration Starter',
						price: '€3,000',
						period: '/project',
						features: ['Basic migration plan', 'Data backup', 'Initial setup', 'Documentation']
					},
					{
