	}
	
	.testimonial-slider {
		position: relative;
		overflow: hidden;
		min-height: 400px;
	}
	
	.testimonial-slide {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		text-align: center;
		opacity: 0;
		visibility: hidden;
		transform: translateY(20px);
		transition: all 0.5s ease-in-out;
	}
	
	.testimonial-slide.active {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
