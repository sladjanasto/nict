<style>
	.team {
		background: var(--bg-primary);
	}
	
	.team-intro {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xxl);
		align-items: center;
		margin-bottom: var(--spacing-xxl);
	}
	
	.team-image {
		text-align: center;
	}
	
	.team-main-img {
		width: 100%;
		max-width: 400px;
		height: auto;
		border-radius: var(--radius-xl);
		box-shadow: var(--shadow-xl);
	}
	
	.team-title {
		font-size: var(--font-size-4xl);
		font-weight: 700;
		color: var(--text-dark);
		margin-bottom: var(--spacing-xl);
		line-height: 1.2;
	}
	
	.team-title .highlight {
		color: #667eea;
	}
	
	.team-description {
		font-size: 1.2rem;
		color: #5a6c7d;
		margin-bottom: 20px;
		line-height: 1.6;
	}
	
	.team-motto {
		font-size: 1.1rem;
		color: #667eea;
		font-style: italic;
		font-weight: 500;
	}
	
	.team-members {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 40px;
		margin-bottom: 80px;
	}
	
	.member-card {
