---
// Dynamic blog post page
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Format publication date
const pubDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Calculate reading time (rough estimate)
const words = post.body.split(' ').length;
const readingTime = Math.ceil(words / 200);
---

<Layout title={`${post.data.title} - AllOps Blog`}>
  <Header />
  
  <main class="post-main">
    <!-- Post Header -->
    <header class="post-header">
      <div class="container">
        <div class="breadcrumb">
          <a href="/blog">Blog</a>
          <span class="separator">→</span>
          <span class="current">{post.data.category}</span>
        </div>
        
        <div class="post-meta">
          <span class="category">{post.data.category}</span>
          <div class="meta-divider">•</div>
          <time datetime={post.data.pubDate.toISOString()}>{pubDate}</time>
          <div class="meta-divider">•</div>
          <span class="reading-time">{readingTime} min read</span>
        </div>
        
        <h1 class="post-title">{post.data.title}</h1>
        <p class="post-description">{post.data.description}</p>
        
        <div class="post-author">
          <span>By <strong>{post.data.author}</strong></span>
        </div>
        
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </header>

    <!-- Hero Image -->
    {post.data.heroImage && (
      <div class="hero-image">
        <div class="container">
          <img src={post.data.heroImage} alt={post.data.title} />
        </div>
      </div>
    )}

    <!-- Post Content -->
    <article class="post-content">
      <div class="container">
        <div class="content-wrapper">
          <Content />
        </div>
      </div>
    </article>

    <!-- Post Footer -->
    <footer class="post-footer">
      <div class="container">
        <div class="post-navigation">
          <a href="/blog" class="back-to-blog">← Back to Blog</a>
        </div>
        
        <div class="share-section">
          <h3>Share this article</h3>
          <div class="share-buttons">
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`} 
               target="_blank" class="share-btn twitter">
              Share on Twitter
            </a>
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
               target="_blank" class="share-btn linkedin">
              Share on LinkedIn
            </a>
          </div>
        </div>
      </div>
    </footer>
  </main>

  <Footer />
</Layout>

<style>
  .post-main {
    min-height: 100vh;
  }

  .post-header {
    background: var(--color-gray-50);
    padding: var(--spacing-4xl) 0 var(--spacing-3xl);
  }

  .breadcrumb {
    margin-bottom: var(--spacing-lg);
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
  }

  .breadcrumb a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 var(--spacing-sm);
  }

  .current {
    color: var(--color-gray-700);
    font-weight: 500;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-xl);
    font-size: var(--font-size-sm);
  }

  .category {
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--border-radius-full);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-divider {
    color: var(--color-gray-400);
  }

  time, .reading-time {
    color: var(--color-gray-600);
  }

  .post-title {
    font-size: var(--font-size-5xl);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--spacing-lg);
    color: var(--color-gray-900);
  }

  .post-description {
    font-size: var(--font-size-xl);
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: var(--spacing-xl);
    max-width: 800px;
  }

  .post-author {
    margin-bottom: var(--spacing-lg);
    color: var(--color-gray-700);
  }

  .post-tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-gray-200);
    color: var(--color-gray-700);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--border-radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .hero-image {
    margin: var(--spacing-3xl) 0;
  }

  .hero-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .post-content {
    padding: var(--spacing-4xl) 0;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Prose styling for markdown content */
  .content-wrapper :global(h1) {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    margin: var(--spacing-4xl) 0 var(--spacing-xl);
    color: var(--color-gray-900);
    line-height: 1.2;
  }

  .content-wrapper :global(h2) {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    margin: var(--spacing-3xl) 0 var(--spacing-lg);
    color: var(--color-gray-900);
    line-height: 1.3;
  }

  .content-wrapper :global(h3) {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    margin: var(--spacing-2xl) 0 var(--spacing-md);
    color: var(--color-gray-900);
    line-height: 1.4;
  }

  .content-wrapper :global(p) {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    margin-bottom: var(--spacing-lg);
    color: var(--color-gray-700);
  }

  .content-wrapper :global(ul, ol) {
    margin: var(--spacing-lg) 0;
    padding-left: var(--spacing-xl);
  }

  .content-wrapper :global(li) {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    margin-bottom: var(--spacing-sm);
    color: var(--color-gray-700);
  }

  .content-wrapper :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
    font-style: italic;
    color: var(--color-gray-600);
  }

  .content-wrapper :global(code) {
    background: var(--color-gray-100);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--border-radius-sm);
    font-family: 'Courier New', monospace;
    font-size: var(--font-size-sm);
    color: var(--color-gray-800);
  }

  .content-wrapper :global(pre) {
    background: var(--color-gray-900);
    color: var(--color-gray-100);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-lg);
    overflow-x: auto;
    margin: var(--spacing-xl) 0;
    line-height: 1.5;
  }

  .content-wrapper :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
  }

  .content-wrapper :global(a) {
    color: var(--color-primary);
    text-decoration: none;
  }

  .content-wrapper :global(a:hover) {
    text-decoration: underline;
  }

  .content-wrapper :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius-lg);
    margin: var(--spacing-xl) 0;
    box-shadow: var(--shadow-md);
  }

  .post-footer {
    background: var(--color-gray-50);
    padding: var(--spacing-4xl) 0;
    border-top: 1px solid var(--color-gray-200);
  }

  .post-navigation {
    margin-bottom: var(--spacing-3xl);
  }

  .back-to-blog {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .back-to-blog:hover {
    text-decoration: underline;
  }

  .share-section h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-lg);
    color: var(--color-gray-900);
  }

  .share-buttons {
    display: flex;
    gap: var(--spacing-md);
  }

  .share-btn {
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    font-weight: 500;
    transition: transform var(--transition-fast);
  }

  .share-btn:hover {
    transform: translateY(-2px);
  }

  .twitter {
    background: #1da1f2;
    color: white;
  }

  .linkedin {
    background: #0077b5;
    color: white;
  }

  @media (max-width: 768px) {
    .post-header {
      padding: var(--spacing-3xl) 0 var(--spacing-2xl);
    }

    .post-title {
      font-size: var(--font-size-3xl);
    }

    .post-description {
      font-size: var(--font-size-lg);
    }

    .hero-image img {
      height: 250px;
    }

    .post-content {
      padding: var(--spacing-3xl) 0;
    }

    .content-wrapper :global(h1) {
      font-size: var(--font-size-3xl);
    }

    .content-wrapper :global(h2) {
      font-size: var(--font-size-2xl);
    }

    .content-wrapper :global(h3) {
      font-size: var(--font-size-xl);
    }

    .share-buttons {
      flex-direction: column;
    }
  }
</style>