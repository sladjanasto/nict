<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background-color: #e8e2d4;
    min-height: 100vh;
    padding: 40px;
    color: #2c2c2c;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto;
    height: calc(100vh - 120px);
    position: relative;
  }

  .card {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
  }

  /* Portfolio Card */
  .portfolio-card {
    background: linear-gradient(135deg, #b8a082 0%, #8b7355 100%);
    position: relative;
  }

  .portrait-section {
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    padding: 40px;
  }

  .portrait-img {
    width: 140px;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    margin-right: auto;
  }

  .portfolio-text-overlay {
    position: absolute;
    right: 40px;
    top: 50%;
    transform: translateY(-50%);
  }

  .portfolio-title {
    font-size: 4.5rem;
    font-weight: 300;
    color: #f5f1eb;
    line-height: 0.9;
    letter-spacing: -0.02em;
  }

  /* Interior Card */
  .interior-card {
    background: #f5f1eb;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Quote Card */
  .quote-card {
    background: #2c2c2c;
    color: #f5f1eb;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .quote-text {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 40px;
    font-weight: 300;
  }

  .quote-text em {
    font-style: italic;
    font-weight: 400;
  }

  .studio-badge {
    align-self: flex-start;
    border: 1px solid #f5f1eb;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
  }

  /* Projects Card */
  .projects-card {
    background: #f5f1eb;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .projects-title {
    font-size: 2.2rem;
    font-weight: 400;
    margin-bottom: 24px;
    line-height: 1.2;
  }

  .projects-title em {
    font-style: italic;
    font-weight: 300;
  }

  .projects-description {
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 16px;
    color: #4a4a4a;
    font-weight: 300;
  }

  /* Book Card */
  .book-card {
    background: #f5f1eb;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .book-large {
    font-size: 6rem;
    font-weight: 600;
    line-height: 0.8;
    letter-spacing: -0.04em;
    color: #2c2c2c;
  }

  /* Portrait Hat Card */
  .portrait-hat-card {
    background: #4a4a4a;
  }

  /* Footer */
  .footer-info {
    position: absolute;
    bottom: -60px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    color: #6a6a6a;
    font-weight: 300;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .grid-container {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto auto;
      height: auto;
      min-height: calc(100vh - 120px);
    }

    .portfolio-title {
      font-size: 3.5rem;
    }

    .book-large {
      font-size: 4rem;
    }

    body {
      padding: 20px;
    }
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
      gap: 16px;
      height: auto;
    }

    .card {
      min-height: 280px;
    }

    .portfolio-card .portrait-section {
      padding: 30px;
      flex-direction: column;
      text-align: center;
    }

    .portfolio-text-overlay {
      position: static;
      transform: none;
      margin-top: 20px;
    }

    .portfolio-title {
      font-size: 3rem;
    }

    .quote-card {
      padding: 30px;
    }

    .projects-card {
      padding: 30px;
    }

    .projects-title {
      font-size: 1.8rem;
    }

    .book-large {
      font-size: 3.5rem;
    }

    .footer-info {
      flex-direction: column;
      gap: 8px;
      text-align: center;
      bottom: -80px;
    }

    body {
      padding: 16px;
    }
  }

  /* Hover animations */
  .portfolio-card:hover .portrait-img {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  .quote-card:hover .studio-badge {
    background-color: #f5f1eb;
    color: #2c2c2c;
    transition: all 0.3s ease;
  }

  .book-card:hover .book-large {
    transform: scale(1.1);
    transition: transform 0.3s ease;
  }

  /* Loading animation */
  .card {
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
  }

  .card:nth-child(1) { animation-delay: 0.1s; }
  .card:nth-child(2) { animation-delay: 0.2s; }
  .card:nth-child(3) { animation-delay: 0.3s; }
  .card:nth-child(4) { animation-delay: 0.4s; }
  .card:nth-child(5) { animation-delay: 0.5s; }
  .card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>